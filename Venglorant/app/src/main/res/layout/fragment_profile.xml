<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="832dp"
        android:orientation="vertical"
        tools:context=".TrangCN">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:src="@drawable/anhcanhan" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"

            android:layout_height="66dp"
            android:gravity="center"
            android:src="@drawable/covietnam" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="18dp"
            android:gravity="center"
            android:text=" Văn Tủng Xẻn"
            android:textSize="46sp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="  ID Người Dùng : 123456789"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:text="  Đã tham gia từ tháng 10 năm 2021"
            android:textSize="16sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="311dp"
            android:layout_height="50dp"
            android:insetTop="4dp"
            android:text="  Mời bạn bè"
            android:textSize="26sp" />


        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  Thống kê"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/statistics_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_email"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/post_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Mức rank : Đồng "
                android:textSize="16sp" />

            <TextView
                android:id="@+id/follower_count"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_below="@id/post_count"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Số KN: 2 năm"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/following_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16sp"
                android:text="Số lần lên đỉnh: 12 lần"
                android:layout_below="@id/follower_count" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  Thành tích "
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="133dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="90dp"
                android:text="Xem Tất Cả"
                android:textColor="#0878F1"
                android:textSize="24sp" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="271dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="126dp"
                android:layout_height="107dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="14dp"
                android:gravity="center"
                android:src="@drawable/experience"
                app:layout_constraintEnd_toStartOf="@+id/imageView8"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="123dp"
                android:layout_height="107dp"
                android:gravity="center"
                android:src="@drawable/wreath"
                app:layout_constraintEnd_toStartOf="@+id/imageView10"
                app:layout_constraintStart_toEndOf="@+id/imageView9"
                tools:layout_editor_absoluteY="0dp" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="117dp"
                android:layout_height="109dp"
                android:layout_marginStart="14dp"
                android:layout_marginEnd="16dp"
                android:gravity="center"
                android:src="@drawable/canhan"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView8" />


        </androidx.constraintlayout.widget.ConstraintLayout>


        <!--        <ImageView-->
        <!--            android:id="@+id/imageView8"-->
        <!--            android:layout_width="52dp"-->
        <!--            android:layout_height="49dp"-->
        <!--            android:layout_gravity="right"-->
        <!--            android:gravity="right"-->
        <!--            android:src="@drawable/send" />-->

    </LinearLayout>

</FrameLayout>