<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bo_goc"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ivHinhBH"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/women_homefrag"></ImageView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:id="@+id/txtUnitBH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/banger"
                android:text="Unit 1"
                android:paddingLeft="10dp"
                android:textSize="30sp"></TextView>

            <TextView
                android:id="@+id/txtTenBH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/ubuntu_bold"
                android:text="A Letter to my friend"
                android:textColor="#3F51B5"
                android:paddingLeft="10dp"
                android:textSize="20sp"></TextView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>